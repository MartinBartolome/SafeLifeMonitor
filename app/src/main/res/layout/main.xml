<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HauptActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/KontaktName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/schutzengel_32"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/KontaktName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/institution_32"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/KontaktName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/krankenhaus_32"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/KontaktName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/polizei_32"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/KontaktName5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/feuerwehr_32"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:textSize="36sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>