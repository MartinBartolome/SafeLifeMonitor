<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HMI.Main">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ContactName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/schutzengel_32"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/ContactName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/institution_32"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/ContactName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/hospital_32"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/ContactName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/police_32"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/ContactName5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/firefighter_32"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/AlarmButton"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:contentDescription="@string/AlarmButtonDescription"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:src="@drawable/alarm" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>